@{
    ViewData["Title"] = "Boot Camp";
    Layout = "_BootCampLayout";
}

<section class="bg-dark p-5 text-light text-center text-sm-start">
    <div class="container">
        <div class="d-sm-flex align-items-center justify-content-between">
            <div>
                <h1>
                    Become a
                    <span class="text-warning">.NET Developer</span>
                </h1>
                <p class="lead my-3">
                    We focus on teaching our students the fundamentals of the latest and gratest technologies to
                    prepare them for their first dev role.
                </p>
                <button class="btn btn-warning lg">Start the enrollment</button>
            </div>
           
            <img src="~/images/showcase.svg" alt="" asp-append-version="true"class="img-fluid w-50">
        </div>
    </div>
</section>