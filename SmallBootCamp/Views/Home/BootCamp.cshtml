@{
    ViewData["Title"] = "Boot Camp";
    Layout = "_BootCampLayout";
}

<section class="bg-dark p-5 p-lg-0 pt-lg-2 text-light text-center text-sm-start">
    <div class="container">
        <div class="d-sm-flex align-items-center justify-content-between">
            <div>
                <h1>
                    Become a
                    <span class="text-warning">.NET Developer</span>
                </h1>
                <p class="lead my-3">
                    We focus on teaching our students the fundamentals of the latest and gratest technologies to
                    prepare them for their first dev role.
                </p>
                <button class="btn btn-warning lg">Start the enrollment</button>
            </div>

            <img src="~/images/showcase.svg" alt="" asp-append-version="true" class="img-fluid w-50 d-none d-sm-block">
        </div>
    </div>
</section>

<!-- Newsletter-->
<section class="bg-primary text-light p-5">
    <div class="container d-md-flex justify-content-between align-items-center">
        <h3 class="mb-3 mb-md-0">
            Sign Up For Our Newsletter
        </h3>

        <div class="input-group news-input">
            <input type="text" class="form-control" placeholder="Enter email">
            <button class="btn btn-warning btn-lg" type="button">Subscribe</button>
        </div>
    </div>
</section>

<!-- Boxes-->
